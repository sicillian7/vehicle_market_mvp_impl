<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nixxie.vehiclemarket.activity.MainActivity">


    <com.nixxie.vehiclemarket.customViews.SelectionDetailsView
        android:id="@+id/selection_details_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/selection_details_view"
        android:layout_above="@+id/btn_choose"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/btn_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="NEXT"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
